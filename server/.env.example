# =============================================
# KONEKTIKA VPN BUNDLE SHARING - ENV CONFIG
# =============================================
# Copy this file to .env and fill in your actual values

# ============ APPLICATION ============
APP_NAME=Konektika
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000

# ============ DATABASE ============
DB_HOST=localhost
DB_PORT=3306
DB_NAME=konektika
DB_USER=konektika_user
DB_PASSWORD=your_database_password_here
DB_ROOT_PASSWORD=your_root_password_here

# ============ REDIS (Optional) ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============ JWT AUTHENTICATION ============
JWT_SECRET=your_very_long_random_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_very_long_random_refresh_secret_here
JWT_REFRESH_EXPIRE=30d

# ============ VPN SERVER CONFIGURATION ============
VPN_SERVER_IP=your.public.ip.address
VPN_SERVER_PORT=51820
VPN_PROTOCOL=wireguard
VPN_SUBNET=10.8.0.0/24
VPN_DNS1=8.8.8.8
VPN_DNS2=8.8.4.4

# WireGuard Configuration
# Generate public key with: sudo wg show wg0 | grep "public key"
WG_SERVER_PUBLIC_KEY=your_wireguard_server_public_key_here
# Shared secret for VPN tracking endpoints (generate a random secure string)
WG_TRACKING_SECRET=your_very_long_random_tracking_secret_here

# OpenVPN Paths (Legacy - for backward compatibility)
OPENVPN_DIR=/home/your_username/konektika/server/openvpn
OPENVPN_CONFIG_DIR=/home/your_username/konektika/server/openvpn/configs
OPENVPN_KEYS_DIR=/home/your_username/konektika/server/openvpn/keys
OPENVPN_EXECUTABLE=/usr/sbin/openvpn

# ============ PAYMENT PROCESSING ============
DEFAULT_CURRENCY=TZS
MIN_BUNDLE_PRICE=1000
MAX_BUNDLE_PRICE=50000
PAYMENT_TIMEOUT_MINUTES=10

# ============ PESAPAL GATEWAY ============
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
PESAPAL_BASE_URL=https://pay.pesapal.com/v3
PESAPAL_IPN_ID=your_ipn_id
PESAPAL_CALLBACK_URL=https://yourdomain.com/api/webhook/pesapal
PESAPAL_CANCEL_URL=https://yourdomain.com/payment/cancel

# ============ FIREBASE (Push Notifications - Optional) ============
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id

# ============ EMAIL CONFIGURATION (Optional) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ============ MONITORING & LOGGING ============
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_url
ANALYTICS_ENABLED=true

# ============ BUNDLE SHARING SETTINGS ============
DEFAULT_BUNDLE_DURATION=24
MAX_CLIENTS_PER_BUNDLE=10
DATA_USAGE_REPORTING_INTERVAL=300
CONNECTION_TIMEOUT_SECONDS=30
VPN_KEEPALIVE_SECONDS=10

# ============ SECURITY SETTINGS ============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12
SESSION_TIMEOUT_HOURS=168
